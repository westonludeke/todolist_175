<ul id="lists">
  <% sort_lists(@master_list) do |list, index| %>
    <li class="<%= list_class(list) %>">
      <h2><a href="/lists/<%= index %>"><%= list[:name] %></a></h2>
      <p><%= number_of_incomplete_todos(list) %>/<%= size_of_todo_list(list) %></p>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List</a>
<% end %>

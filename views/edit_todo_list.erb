<section id="todos">
  <header>
    <h2>Editing: <%= @requested_list[:name] %></h2>
    <ul>
      <li>
        <form action="/lists/<%= @list_id %>/delete" method="post">
          <button type="submit" class="delete">Delete List</button>
        </form>
    </ul>
  </header>
  <br><br>

<form action="/lists/<%= @list_id %>" method="post">
  <dl>
    <dt>
      <label for="list_name">Enter the new name for your list:</label>
    </dt>
    <dd>
      <input name="list_name" placeholder="List Name" type="text" value="<%= params[:list_name] || @list[:name] %>">
    </dd>
  </dl>
  <fieldset class="actions">
    <input type="submit" value="Save">
    <a href="/lists/<%= @list_id %>">Cancel</a>
  </fieldset>
</form>
</section>

<% content_for :header_links do %>
  <a class="list" href="/lists">All Lists</a>
<% end %>
